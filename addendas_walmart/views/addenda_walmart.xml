<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <template name="Walmart" t-name="addendas_walmart.add_walmart"><!-- Variables de datos
            restantes -->
            <t t-set="sdato" t-value="'FaltaDato'" /><!-- Datos del xml generado por el SAT -->
            <t t-set="xml" t-value="record._get_values_addenda()" />
            <t t-set="number_order" t-value="record.number_order" />
            <t t-set="date_order" t-value="record.date_addenda_order.year" />
            <t t-set="number_cedis" t-value="record.shipping_number_cedis" />
            <t t-set="number_provider" t-value="record.partner_id.shipping_number_provider" />
            <WM:AddendaWalmart
                xmlns:WM="http://www.pegasotecnologia.com/secfd/Schemas/Receptor/Walmart" 
                xsi:schemaLocation="http://www.pegasotecnologia.com/secfd/Schemas/Receptor/Walmart http://www.pegasotecnologia.com/secfd/Schemas/Receptor/AddendaWalmart.xsd" 
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                t-att-Anio="date_order" 
                t-att-numeroProveedor="number_provider" 
                t-att-ordenCompra="number_order" 
                t-att-unidadCEDIS="number_cedis" 
                pais="MÃ©xico"
            />
        </template>
        
        <record id="add_walmart" model="ir.ui.view">
            <field name="l10n_mx_edi_addenda_flag">True</field>
        </record>

        <record id="add_camp_addendas_walmart" model="ir.ui.view">
            <field name="name">add.camp.addendas.walmart</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="l10n_mx_edi.l10n_mx_edi_inh_res_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='addenda']" position="inside">
                    <group name="walmart">
                        <field name="is_walmart" />
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>